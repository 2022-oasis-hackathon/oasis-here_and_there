<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForUserActivity2">

    <LinearLayout
        android:id="@+id/top"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심 업종을"
            android:textColor="#000000"
            android:fontFamily="@font/scd2"
            android:textSize="30dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택해주세요."
            android:textColor="#000000"
            android:fontFamily="@font/scd2"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/top"
        android:layout_above="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:id="@+id/one"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout5">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sprout"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_below="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="농업"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:fontFamily="@font/scdream5"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/two"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout5">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bee"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_below="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="양봉업"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:fontFamily="@font/scdream5"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/three"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout5">
            <ImageView
                android:id="@+id/image3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fishing"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_below="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어업"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:fontFamily="@font/scdream5"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#52DB52"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 단계로 넘어가기"
            android:textColor="#ffffff"
            android:fontFamily="@font/scdream5"
            android:textSize="18dp"/>

    </RelativeLayout>


</RelativeLayout>